{
  "name": "@stjudecloud/assets",
  "version": "1.0.0-rc.0",
  "description": "Assets for the St. Jude Cloud design system.",
  "scripts": {
    "start": "npx concurrently \"$npm_execpath run watch:css\" \"$npm_execpath run serve\"",
    "build:css": "npx sass scss/base.scss css/base.css --load-path node_modules",
    "serve": "npx parcel serve index.html",
    "watch:css": "nodemon --watch 'scss/' --ext '*' --exec \"$npm_execpath run build:css\""
  },
  "files": [
    "fonts/**/*",
    "images/**/*",
    "loaders/**/*",
    "pdfs/**/*"
  ],
  "author": "St. Jude Cloud <support@stjude.cloud>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "@parcel/transformer-sass": "^2.0.0-rc.0",
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-rc.0"
  },
  "dependencies": {
    "hamburgers": "^1.1.3",
    "normalize.css": "^8.0.1"
  }
}
